<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green_team"
            android:layout_margin="2dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/greenScoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                style="@style/TotalScoreName" />

            <TextView
                android:id="@+id/greenScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/greenScoreName"
                 style="@style/TotalScorePoints" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue_team"
            android:layout_margin="2dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/blueScoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                 style="@style/TotalScoreName" />

            <TextView
                android:id="@+id/blueScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/blueScoreName"
                 style="@style/TotalScorePoints" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red_team"
            android:layout_margin="2dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/redScoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
              style="@style/TotalScoreName" />

            <TextView
                android:id="@+id/redScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/redScoreName"
                 style="@style/TotalScorePoints" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>